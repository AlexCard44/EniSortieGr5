{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="text-4xl font-bold dark:text-white ml-10">Connectez-vous</h1>
    <div class="grid grid-cols-6 gap-4">
        <label for="inputUsername" class="my-5 text-green-600 col-start-2">Pseudo</label>
        <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="col-start-3 w-60 rounded" autocomplete="username" required autofocus>
    </div>
    <div class="grid grid-cols-6 gap-4">
        <label for="inputPassword" class="my-5 text-green-600 col-start-2">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="col-start-3 w-60 rounded" autocomplete="current-password" required>
    </div>
    <div class="grid grid-cols-6 gap-4">
        <label class="my-5 text-green-600 col-start-3">
            <input type="checkbox" name="_remember_me" checked>
            Se souvenir de moi
        </label>
    </div>
    <div class="grid grid-cols-6 gap-4">
        <div class="col-start-2 flex items-center">
            <a href="{{ path('app_forgot_password_request') }}">
                <button type="button" class="bg-lime-500 hover:bg-lime-700 text-white font-bold py-2 px-4 border border-lime-700 rounded">Mot de passe oubli√©</button>
            </a>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">
        </div>
        <div class="flex items-center col-start-3">
            <button type="submit" class="bg-lime-500 hover:bg-lime-700 text-white font-bold py-2 px-4 border border-lime-700 rounded">
                Connexion !
            </button>
        </div>
    </div>

</form>
{% endblock %}
