                    {# Dropdown menu lieux #}
                        <div class="flex items-center">
                            <button id="dropdownDefaultButton" data-dropdown-toggle="lieu_dropdown" class="h-10 text-gray-900 bg-lime-300 hover:bg-lime-700 hover:text-white focus:outline-none focus:ring-lime-300 font-medium font-hepta rounded-lg text-sm px-3 py-2 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" type="button">
