                            <li class="py-2 flex justify-center">
                                <a href="{{ path('profil_monProfil') }}" class="text-gray-900 hover:bg-lime-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium font-hepta">Mon profil</a>
                            </li>
                            <li class="py-2 flex justify-center">
                                <a href="{{ path('app_logout') }}" class="text-gray-900 hover:bg-lime-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium font-hepta">Se déconnecter</a>
                            </li>
                        </ul>
                    </div>

                    {% if app.user.photo %}
                        <div class="flex flex-wrap justify-cente col-start-2">
                            <div class="relative w-20 h-20 ">
                                <img src="{{ asset('/images/' ~ app.user.photo) }}" alt="photo_profil" class="w-20 h-20 shadow-sm border-4 rounded-full border-gray-400 overflow-hidden">
                            </div>
                        </div>
                        {% else %}
                            <div class="flex flex-wrap justify-cente col-start-2">
                                <div class="relative w-20 h-20 ">
                                    <img src="{{ asset('images/Default_pfp.jpg') }}" alt="photo_profil_default" class="w-20 h-20 shadow-sm border-4 rounded-full border-gray-400 overflow-hidden">
                                </div>
                            </div>
                    {% endif %}

