{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1 class="ml-8 mt-3 text-4xl font-semibold leading-7 text-gray-900 font-hepta">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="w-full">
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.username, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.mail, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.plainPassword, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded',
                label: 'Password'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.nom, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.prenom, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.telephone, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.site, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.actif, {
                row_class: 'my-5 ml-6 grid grid-cols-3 col-start-2 col-span-4 [&>*]:flex [&>*]:flex-row',
                label_class: 'ml-4 font-hepta',
                widget_class: 'py-1 col-start-2 text-lime-600 focus:ring-lime-500 checked:bg-lime-600 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(registrationForm.agreeTerms, {
                row_class: 'my-5 ml-6 grid grid-cols-3 col-start-2 col-span-4 [&>*]:flex [&>*]:flex-row',
                label_class: 'ml-4 font-hepta',
                widget_class: 'py-1 col-start-2 text-lime-600 focus:ring-lime-500 checked:bg-lime-600 rounded'
            }) }}
        </div>
    </div>
    <div class="grid grid-cols-6 gap-4">
        <button type="submit" class="bg-lime-500 col-start-2 hover:bg-lime-700 text-white font-bold py-2 px-4 border border-lime-700 rounded">Inscrire</button>
    </div>

    {{ form_end(registrationForm) }}

    <div style="height: 100px"></div>

    <h2 class="ml-8 mt-3 text-4xl font-semibold leading-7 text-gray-900 font-hepta">Ajouter plusieurs utilisateurs via un fichier CSV</h2>

    {{ form_errors(csvForm) }}
    {{ form_start(csvForm) }}
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(csvForm.csvFile, {
            row_class: 'my-5 ml-6 grid grid-cols-3 col-start-2 col-span-4 [&>*]:flex [&>*]:flex-row',
            label_class: 'text-green-600 font-hepta',
            widget_class: 'py-1 col-start-2 text-lime-600 focus:ring-lime-500 checked:bg-lime-600 rounded'
        }) }}
    </div>
<div class="grid grid-cols-6 gap-4">
    <button type="submit" class="bg-lime-500 col-start-2 hover:bg-lime-700 text-white font-bold py-2 px-4 border border-lime-700 rounded">Importer</button>
</div>
    {{ form_end(csvForm) }}

    <div style="height: 100px"></div>

{% endblock %}
