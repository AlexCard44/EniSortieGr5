    {% for sortie in sorties %}
    <div id="results">
        <p>{{ sortie.nom }}
        <p>Organisateur : <a href="{{ path('detail', {'id': sortie.organisateur.id}) }}">
                {{ sortie.organisateur.username}}
            </a></p>
            <span> - <a href="{{ path('sortie_details', {'id': sortie.id}) }}">Détails</a></span>
            {% if app.user == sortie.organisateur and (sortie.etat.id == 1 or sortie.etat.id == 2) %}
                <span> -
                <a href="{{ path('sortie_edit', {'id':sortie.id}) }}"> Modifier</a>
                    </span>
            {% endif %}
        </p>
    </div>
    {% endfor %}
