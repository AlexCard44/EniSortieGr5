{% extends 'base.html.twig' %}

{% block h1 %}
    <h1>Modifier une Sortie</h1>
{% endblock %}

{% block body %}

{{ form_start(sortieForm) }}
<div class="w-full">
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.nom, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60 py-1 col-start-2 rounded'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.dateHeureDebut, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60 py-1 rounded'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.dateHeureFin, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60 py-1 rounded'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.dateLimiteInscription, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60 py-1 rounded'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.nbInscriptionsMax, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60 py-1 rounded'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.infosSortie,{
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'col-span-1.5'
        }) }}
    </div>
    <div class="grid grid-cols-6 gap-4">
        {{ form_row(sortieForm.lieu, {
            row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
            label_class: 'text-green-600',
            widget_class: 'w-60'
        }) }}
    </div>

</div>

<div class="my-6 flex justify-around">
    {{ form_end(sortieForm) }}
    <div>
        <button type="button" onClick="window.history.back();"  class="bg-lime-500 hover:bg-lime-700 text-white font-bold py-2 px-4 border border-lime-700 rounded">Go back</button>
    </div>
</div>
{% endblock %}

{% block title %}
Modifier une Sortie
{% endblock %}

