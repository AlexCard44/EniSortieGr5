{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Réinitialisation{% endblock %}

{% block body %}
    <h1 class="ml-8 py-4 text-4xl text-gray-900 font-hepta">Réinitialisez votre mot de passe</h1>

    {{ form_start(resetForm) }}
    <div class="w-full">
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(resetForm.plainPassword, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
    </div>

        <button class="btn btn-primary">Réinitialiser</button>
    {{ form_end(resetForm) }}
{% endblock %}
