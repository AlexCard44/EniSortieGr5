{% extends 'base.html.twig' %}

{% block title %}
    Ajouter une Ville
{% endblock %}

{% block body %}

    <h1 class="ml-8 py-4 text-4xl text-gray-900 font-hepta">Ajouter une Ville</h1>

    {{ form_start(villeForm) }}
    <div class="w-full">
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(villeForm.nom, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>
        <div class="grid grid-cols-6 gap-4">
            {{ form_row(villeForm.codePostal, {
                row_class: 'my-5 grid grid-cols-3 col-start-2 col-span-4 flex',
                label_class: 'text-green-600 font-hepta',
                widget_class: 'w-60 py-1 col-start-2 rounded'
            }) }}
        </div>

        <div class="grid grid-cols-6 gap-4 [&>div:first-child]:col-start-2">
            <div class="grid grid-cols-3 col-start-2 col-span-4">
                {{ form_end(villeForm) }}
                <button type="button" onClick="window.location.href=window.location.href;" class="w-48 bg-lime-500 hover:bg-lime-700 col-start-2 text-white font-bold py-2 px-4 border border-lime-700 rounded">Effacer</button>
            </div>
        </div>
    </div>

{% endblock %}

